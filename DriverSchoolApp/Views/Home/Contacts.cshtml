@using static DriverSchoolApp.Constants.ContactsPage
@using static DriverSchoolApp.Constants.Contacts


<!-- Edit google location, Edit eamil address -->


<!-- Contact Start -->
<div class="container-fluid p-0 wow fadeIn" data-wow-delay="0.1s">

    <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
        <h6 class="text-primary text-uppercase mb-2">@PageName</h6>
    </div>
    <div class="row g-5">
        <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 450px;">
            <div class="position-relative h-100">
                <iframe class="position-relative w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                        frameborder="0" style="min-height: 450px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
        </div>
        <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
            <h6 class="text-primary text-uppercase mb-2">@Title</h6>
            <h4 class="display-6 mb-4">@SubTitle</h4>
          
            <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@Address</p>
            <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@PhoneNumber</p>
            <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@PhoneNumber2</p>
            <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@example.com</p>
            <p class="mb-2"><i class="fa fa-user-tie me-3"></i>@OwnerName</p>


        </div>
    </div>
</div>

<!-- Contact End -->